/*
Задача 7. 
Дана окружность с целочисленным радиусом R<10^6. 
Посчитать число точек с целочисленными координатами, 
лежащих внутри окружности, в том числе и находящихся на границе окружности.
*/

#include <iostream>
#include <cmath>

int main()
{
    unsigned int r;
    do {
        std::cout << "r = ";
        std::cin >> r;
    } while (r < 1 || r >= pow(10, 6));

    int k = r; //Заранее учитываем точки лежащие на окружности

    for (int x = 0; x <= r; ++x)
    {
        double xd = x;  //Честно говоря не знаю почему, но так вычисления происходят быстрее

        for (int y = 0; y <= r; ++y)
        {
            double yd = y;

            if (sqrt(xd * xd + yd * yd) / r <= r) //Изначально было if(sqrt(x*x+y*y)<=r*r), но компилятор ругался на возможное переполнение из-за r*r
                ++k;
        }
    }
    std::cout << k;
    return 0;
}
